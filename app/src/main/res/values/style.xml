<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text Styles -->
    <style name="DefaultTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="GrayTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="HeadingTextStyleDark">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blueGrayColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheadingTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Detail Text Styles -->
    <style name="DetailNameTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DetailPriceTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DetailMaterialTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/rounded_black_border</item>
    </style>

    <style name="DetailColorTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DetailDescriptionTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DetailTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonColorPrimary</item>
        <item name="android:textColor">@color/buttonColorSecondary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blueGrayColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
    </style>

    <style name="ShowProductButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonColorPrimary</item>
        <item name="android:textColor">@color/buttonColorSecondary</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
    </style>

    <style name="AddToCartButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blueGrayColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
    </style>

    <!-- Button Shape -->
    <style name="ButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>
