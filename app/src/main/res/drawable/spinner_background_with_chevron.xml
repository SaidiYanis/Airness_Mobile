<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/white"/> <!-- Fond blanc -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Bordure noire -->
            <corners android:radius="8dp"/> <!-- Coins arrondis -->
        </shape>
    </item>
    <item android:right="8dp" android:gravity="end|center_vertical">
        <bitmap
            android:src="@android:drawable/arrow_down_float"
            android:gravity="center"/>
    </item>
</layer-list>
